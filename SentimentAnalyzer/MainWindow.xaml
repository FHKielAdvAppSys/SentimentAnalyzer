<Window x:Class="SentimentAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SentimentAnalyzer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnAnalyzeSentiment" Command="{Binding Path=SearchVM.SearchCommand}" Content="Search" HorizontalAlignment="Left" Margin="229,90,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="txtTopic" Text="{Binding SearchVM.Topic, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="168,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197"/>
        <DataGrid Name="dgrSearchResult" ItemsSource="{Binding Path=SearchVM.Results}" HorizontalAlignment="Left" Height="191" Margin="0,128,0,0" VerticalAlignment="Top" Width="517"/>
    </Grid>
</Window>
